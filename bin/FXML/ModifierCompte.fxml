<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="IHM.ModifierCompteController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Modifier un compte" style="-fx-font-size: 16px;" />

    <TextField fx:id="nomField" promptText="Nom" />
    <TextField fx:id="emailField" promptText="Email" />
    <TextField fx:id="adresseField" promptText="Adresse" />
    <ComboBox fx:id="typeBox" promptText="Type (user/admin)" />

    <Button text="Enregistrer les modifications" onAction="#handleSave" />
</VBox>
