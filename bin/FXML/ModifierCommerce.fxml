<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="IHM.ModifierCommerceController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    
    <Label text="Modifier un commerce" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    
    <TextField fx:id="fieldNom" promptText="Nom du commerce" />
    <TextField fx:id="fieldAdresse" promptText="Adresse" />
    
    <HBox spacing="10">
        <Button text="Valider" onAction="#validerModif" />
        <Button text="Annuler" onAction="#fermer" />
    </HBox>
</VBox>
