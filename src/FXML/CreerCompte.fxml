<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="IHM.CreerCompteController"
      spacing="10" alignment="CENTER"
      style="-fx-padding: 20;"
      prefWidth="350" prefHeight="300">

    <Label text="Créer un compte" style="-fx-font-size: 16px;" />

    <TextField fx:id="nomField" promptText="Nom" />
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Mot de passe" />
    <TextField fx:id="adresseField" promptText="Adresse" />
    <ComboBox fx:id="typeBox" promptText="Type (user/admin)" prefWidth="200" />

    <Button text="Créer" onAction="#handleCreate" />
</VBox>
