<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="IHM.DepotViewController"
      spacing="20" alignment="CENTER" style="-fx-padding: 30; -fx-background-color: #ffffff;">

    <Label text="Déposer un déchet" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox spacing="10">
        <Label text="Type de déchet :" />
        <ComboBox fx:id="typeComboBox" prefWidth="200"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Masse (en kg) :" />
        <TextField fx:id="masseField" promptText="ex : 1.5" />
    </HBox>

    <HBox spacing="20">
        <Button text="Valider le dépôt" onAction="#validerDepot" />
        <Button text="Annuler" onAction="#retourDashboard" />
    </HBox>

</VBox>
