<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="IHM.CreerPoubelleController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    
    <Label text="Créer une poubelle" style="-fx-font-size: 16px;" />

    <TextField fx:id="nomField" promptText="Nom" />
    <ComboBox fx:id="typeBox" promptText="Type de déchet" />
    <TextField fx:id="capaciteField" promptText="Capacité max (kg)" />
    <TextField fx:id="adresseField" promptText="Emplacement" />

    <Button text="Créer" onAction="#handleCreer" />
</VBox>
