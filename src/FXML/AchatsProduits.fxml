<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="IHM.AchatProduitsController"
      spacing="20" style="-fx-padding: 20;" alignment="CENTER">

    <Label text="Catalogue de produits" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TableView fx:id="produitTable" prefWidth="600" prefHeight="300">
        <columns>
            <TableColumn fx:id="colNom" text="Nom" prefWidth="150"/>
            <TableColumn fx:id="colPrix" text="Prix en points" prefWidth="120"/>
            <TableColumn fx:id="colAction" text="Action" prefWidth="120"/>
        </columns>
    </TableView>

    <Button text="Retour" onAction="#retourDashboard" />
</VBox>
